<tr id="equipment-row-<%= equipment.id %>" class="hover:bg-gray-50 mt-4">
  <td class="px-4 py-4 whitespace-nowrap" style="cursor: pointer;" onclick="window.location='<%= send("#{equipment_type}_equipment_path", equipment) %>'">
    <div class="text-sm font-medium text-gray-900"><%= equipment.equipment_type_text %></div>
    <% if equipment.send(equipment_model_field(equipment_type)).present? %>
      <div class="text-sm text-gray-500"><%= equipment.send(equipment_model_field(equipment_type)) %></div>
    <% end %>
  </td>
  <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= equipment.inventory_number %>
  </td>
  <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= equipment.serial_number.presence || '—' %>
  </td>
  <td class="px-4 py-4 whitespace-nowrap">
    <% if equipment.terminal_name.present? %>
      <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
        <%= equipment.terminal_name %>
      </span>
    <% else %>
      <span class="text-gray-400">—</span>
    <% end %>
  </td>
  <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= equipment.send("#{equipment_type}_installation")&.installation_type.presence || '—' %>
  </td>
  <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-500">
    <% if equipment.send("#{equipment_type}_installation") %>
      <%= link_to equipment.send("#{equipment_type}_installation").name, send("#{equipment_type}_installation_path", equipment.send("#{equipment_type}_installation")),
          class: "text-blue-600 hover:text-blue-900" %>
    <% else %>
      <span class="text-gray-400">Не указано</span>
    <% end %>
  </td>
  <td class="px-4 py-4 whitespace-nowrap">
    <%= render_status_badge(equipment.status) %>
  </td>
  <td class="px-4 py-4 text-sm text-gray-500 max-w-xs">
    <%= truncate_note(equipment.note) %>
  </td>
  <td class="px-4 py-4 whitespace-nowrap text-right text-sm font-medium">
    <div class="flex justify-end space-x-2">
      <%= link_to send("#{equipment_type}_equipment_path", equipment), class: "text-blue-600 hover:text-blue-900" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
        </svg>
      <% end %>
      <%= link_to send("edit_#{equipment_type}_equipment_path", equipment), class: "text-indigo-600 hover:text-indigo-900" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
      <% end %>
      <%= link_to send("#{equipment_type}_equipment_path", equipment),
          method: :delete,
          data: { confirm: "Вы уверены, что хотите удалить это оборудование?" },
          class: "text-red-600 hover:text-red-900" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 19a2 2 0 002 2h8a2 2 0 002-2M6 7V6a2 2 0 012-2h8a2 2 0 012 2v1M9 10v6m3-6v6m3-6v6" />
        </svg>
      <% end %>
    </div>
  </td>
</tr>
