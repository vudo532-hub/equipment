<div class="container mx-auto py-8 max-w-4xl">
  <h1 class="text-3xl font-bold mb-6">Импорт оборудования</h1>

  <%= form_with url: admin_import_path, method: :post, multipart: true, local: true, class: "space-y-6" do |form| %>
    <div class="bg-white rounded-lg shadow p-6">
      <div class="mb-6">
        <%= form.label :system, "Система", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.select :system, 
            @systems,
            {},
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div class="mb-6">
        <%= form.label :import_file, "Файл для импорта (CSV или XLSX)", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.file_field :import_file,
            accept: ".csv,.xlsx",
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100" %>
        <p class="mt-2 text-sm text-gray-500">
          Поддерживаемые форматы: CSV (с разделителем ;) и Excel (.xlsx)
        </p>
      </div>

      <div class="flex justify-end gap-3">
        <%= link_to "Отменить", root_path, class: "px-4 py-2 bg-gray-200 text-gray-800 rounded hover:bg-gray-300" %>
        <%= form.submit "Импортировать", class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 cursor-pointer" %>
      </div>
    </div>
  <% end %>

  <!-- Инструкция и шаблон -->
  <div class="bg-white rounded-lg shadow p-6 mt-6">
    <h2 class="text-xl font-semibold mb-4">Структура файла для импорта</h2>

    <div class="overflow-x-auto">
      <table class="w-full text-sm border-collapse border border-gray-300">
        <thead class="bg-gray-50">
          <tr>
            <th class="border border-gray-300 px-3 py-2 text-left">Столбец</th>
            <th class="border border-gray-300 px-3 py-2 text-left">Описание</th>
            <th class="border border-gray-300 px-3 py-2 text-left">Обязательный</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td class="border border-gray-300 px-3 py-2 font-mono text-sm">Тип оборудования</td>
            <td class="border border-gray-300 px-3 py-2">Название типа (будет создан автоматически)</td>
            <td class="border border-gray-300 px-3 py-2">Нет</td>
          </tr>
          <tr class="bg-gray-50">
            <td class="border border-gray-300 px-3 py-2 font-mono text-sm">Модель</td>
            <td class="border border-gray-300 px-3 py-2">Модель оборудования</td>
            <td class="border border-gray-300 px-3 py-2 font-semibold text-red-600">Да</td>
          </tr>
          <tr>
            <td class="border border-gray-300 px-3 py-2 font-mono text-sm">Инвентарный номер</td>
            <td class="border border-gray-300 px-3 py-2">Уникальный инвентарный номер</td>
            <td class="border border-gray-300 px-3 py-2 font-semibold text-red-600">Да</td>
          </tr>
          <tr class="bg-gray-50">
            <td class="border border-gray-300 px-3 py-2 font-mono text-sm">Серийный номер</td>
            <td class="border border-gray-300 px-3 py-2">Серийный номер устройства</td>
            <td class="border border-gray-300 px-3 py-2">Нет (будет "N/A")</td>
          </tr>
          <tr>
            <td class="border border-gray-300 px-3 py-2 font-mono text-sm">Терминал</td>
            <td class="border border-gray-300 px-3 py-2">A, B, C, D, E или F</td>
            <td class="border border-gray-300 px-3 py-2">Нет</td>
          </tr>
          <tr class="bg-gray-50">
            <td class="border border-gray-300 px-3 py-2 font-mono text-sm">Тип места установки</td>
            <td class="border border-gray-300 px-3 py-2">Название типа места</td>
            <td class="border border-gray-300 px-3 py-2">Нет</td>
          </tr>
          <tr>
            <td class="border border-gray-300 px-3 py-2 font-mono text-sm">Название места</td>
            <td class="border border-gray-300 px-3 py-2">Название места установки</td>
            <td class="border border-gray-300 px-3 py-2">Нет</td>
          </tr>
          <tr class="bg-gray-50">
            <td class="border border-gray-300 px-3 py-2 font-mono text-sm">Статус</td>
            <td class="border border-gray-300 px-3 py-2">В работе, На обслуживании, Ожидает ремонта и т.д.</td>
            <td class="border border-gray-300 px-3 py-2">Нет (по умолчанию "В работе")</td>
          </tr>
          <tr>
            <td class="border border-gray-300 px-3 py-2 font-mono text-sm">Примечание</td>
            <td class="border border-gray-300 px-3 py-2">Дополнительная информация</td>
            <td class="border border-gray-300 px-3 py-2">Нет</td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="mt-6">
      <%= link_to admin_import_template_path(format: :csv), class: "inline-flex items-center px-4 py-2 bg-gray-100 text-gray-800 rounded hover:bg-gray-200" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
        Скачать шаблон CSV
      <% end %>
    </div>
  </div>

  <div class="mt-6">
    <%= link_to "← Назад", root_path, class: "text-gray-600 hover:text-gray-800" %>
  </div>
</div>
