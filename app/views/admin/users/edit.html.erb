<% content_for :title, "Изменить роль пользователя" %>

<div class="max-w-2xl mx-auto">
  <div class="mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Изменить роль пользователя</h1>
    <p class="text-gray-600">Назначьте роль для <%= @user.full_name %></p>
  </div>

  <div class="bg-white shadow rounded-lg overflow-hidden">
    <div class="p-6 border-b border-gray-200">
      <div class="flex items-center mb-6">
        <div class="h-16 w-16 rounded-full bg-blue-500 flex items-center justify-center text-white text-xl font-bold">
          <%= @user.initials || '?' %>
        </div>
        <div class="ml-4">
          <h2 class="text-lg font-semibold text-gray-900"><%= @user.full_name %></h2>
          <p class="text-gray-500"><%= @user.email %></p>
        </div>
      </div>

      <%= form_with model: @user, url: admin_user_path(@user), method: :patch, local: true do |f| %>
        <div class="space-y-4">
          <div>
            <%= f.label :role, "Роль", class: "block text-sm font-medium text-gray-700 mb-2" %>
            
            <div class="space-y-3">
              <% User.roles.keys.each do |role| %>
                <label class="flex items-start p-4 border rounded-lg cursor-pointer hover:bg-gray-50 <%= @user.role == role ? 'border-blue-500 bg-blue-50' : 'border-gray-200' %>">
                  <%= f.radio_button :role, role, class: "mt-1 h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300" %>
                  <div class="ml-3">
                    <span class="block text-sm font-medium text-gray-900">
                      <%= I18n.t("roles.#{role}", default: role.humanize) %>
                    </span>
                    <span class="block text-sm text-gray-500">
                      <%= case role
                          when 'viewer' then 'Только просмотр данных'
                          when 'editor' then 'Просмотр и редактирование данных'
                          when 'manager' then 'Полный доступ к данным, включая удаление'
                          when 'admin' then 'Полный доступ + управление пользователями'
                          end %>
                    </span>
                  </div>
                </label>
              <% end %>
            </div>
          </div>

          <div class="pt-4 flex items-center justify-between">
            <%= link_to "Отмена", admin_users_path, class: "text-sm text-gray-600 hover:text-gray-900" %>
            <%= f.submit "Сохранить", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
