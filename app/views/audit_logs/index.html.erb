<div class="max-w-7xl mx-auto">
  <!-- Header -->
  <div class="mb-6">
    <h1 class="text-2xl font-bold text-gray-900">История изменений</h1>
    <p class="mt-1 text-sm text-gray-600">Журнал всех изменений оборудования и мест установки</p>
  </div>

  <!-- Фильтры -->
  <div class="bg-white shadow rounded-lg p-4 mb-6">
    <%= form_with url: audit_logs_path, method: :get, local: true, class: "flex flex-wrap gap-4 items-end" do |f| %>
      <div>
        <%= f.label :system, "Система", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :system,
            [["Все системы", ""], ["CUTE", "cute"], ["FIDS", "fids"], ["ZAMAR", "zamar"]],
            { selected: params[:system] },
            class: "px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div>
        <%= f.label :action_type, "Действие", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :action_type,
            [["Все действия", ""], ["Создание", "create"], ["Изменение", "update"], ["Удаление", "destroy"]],
            { selected: params[:action_type] },
            class: "px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div>
        <%= f.submit "Применить", class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 cursor-pointer" %>
        <%= link_to "Сбросить", audit_logs_path, class: "px-4 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300 ml-2" %>
      </div>
    <% end %>
  </div>

  <!-- Table -->
  <div class="bg-white shadow rounded-lg overflow-hidden">
    <% if @audits.any? %>
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" style="width: 120px;">Дата / Действие</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" style="width: 180px;">Пользователь</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" style="width: 70px;">Система</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" style="width: 150px;">Объект</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Изменения</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @audits.each do |audit| %>
            <tr class="hover:bg-gray-50">
              <td class="px-4 py-3 whitespace-nowrap text-sm">
                <div class="text-gray-900"><%= audit.created_at.strftime("%d.%m.%Y") %></div>
                <div class="text-xs"><%= audit.created_at.strftime("%H:%M") %></div>
                <div class="mt-1"><%= action_badge(audit.action) %></div>
              </td>
              <td class="px-4 py-3 whitespace-nowrap">
                <% if audit.user.present? %>
                  <div class="flex items-center">
                    <div class="h-7 w-7 rounded-full bg-blue-500 flex items-center justify-center text-white text-xs font-medium flex-shrink-0">
                      <%= audit.user.initials rescue '?' %>
                    </div>
                    <div class="ml-2 min-w-0">
                      <div class="text-sm font-medium text-gray-900 truncate"><%= audit.user.full_name rescue audit.user.email %></div>
                    </div>
                  </div>
                <% else %>
                  <span class="text-gray-400 text-sm">Система</span>
                <% end %>
              </td>
              <td class="px-4 py-3 whitespace-nowrap">
                <span class="px-2 py-1 text-xs font-semibold rounded 
                  <%= case system_name(audit.auditable_type)
                      when 'CUTE' then 'bg-blue-100 text-blue-800'
                      when 'FIDS' then 'bg-green-100 text-green-800'
                      when 'ZAMAR' then 'bg-purple-100 text-purple-800'
                      else 'bg-gray-100 text-gray-800'
                      end %>">
                  <%= system_name(audit.auditable_type) %>
                </span>
              </td>
              <td class="px-4 py-3 text-sm">
                <% if audit.auditable %>
                  <%= link_to polymorphic_path(audit.auditable), class: "hover:text-blue-600" do %>
                    <%= auditable_display_two_lines(audit) %>
                  <% end %>
                <% else %>
                  <%= auditable_display_two_lines(audit) %>
                <% end %>
              </td>
              <td class="px-4 py-3 text-sm text-gray-500">
                <%= format_audit_changes(audit) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <!-- Pagination -->
      <div class="px-6 py-4 border-t border-gray-200 flex items-center justify-between">
        <div class="text-sm text-gray-500">
          Показано <%= @pagy.from %>–<%= @pagy.to %> из <%= @pagy.count %> записей
        </div>
        <div>
          <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
        </div>
      </div>
    <% else %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">Нет записей</h3>
        <p class="mt-1 text-sm text-gray-500">История изменений пока пуста.</p>
      </div>
    <% end %>
  </div>
</div>
