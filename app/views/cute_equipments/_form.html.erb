<%= simple_form_for(equipment, url: equipment.persisted? ? cute_equipment_path(equipment) : cute_equipments_path) do |f| %>
  <% if equipment.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">Обнаружены ошибки:</h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% equipment.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="space-y-6">
    <div class="grid grid-cols-1 sm:grid-cols-2" style="gap: 16px;">
      <div>
        <%= f.label :equipment_type, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :equipment_type, 
            options_for_select([
              ["Принтер посадочных талонов", "boarding_pass_printer"],
              ["Принтер багажных бирок", "baggage_tag_printer"],
              ["Клавиатура", "keyboard"],
              ["Сканер", "scanner"],
              ["Считыватель на гейте", "gate_reader"],
              ["Принтер полётной документации", "flight_document_printer"],
              ["Монитор", "monitor"],
              ["Компьютер", "computer"],
              ["Прочее", "other"]
            ], equipment.equipment_type),
            { include_blank: "Выберите тип..." },
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div>
        <%= f.label :equipment_model, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :equipment_model, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500",
            placeholder: "Модель оборудования" %>
      </div>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2" style="gap: 16px;">
      <div>
        <%= f.label :serial_number, class: "block text-sm font-medium text-gray-700 mb-1" %>
        
        <%= f.text_field :serial_number, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500",
            placeholder: "Серийный номер",
            required: true %>
      </div>

      <div>
        <%= f.label :inventory_number, class: "block text-sm font-medium text-gray-700 mb-1" %>
        
        <%= f.text_field :inventory_number, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500",
            placeholder: "Инвентарный номер",
            required: true %>
      </div>
    </div>

    <div>
      <%= f.label :status, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.select :status, 
          options_for_select([
            ["В работе", "active"],
            ["В ремонт", "maintenance"],
            ["Ожидается из ремонта", "waiting_repair"],
            ["Готово к выдачи", "ready_to_dispatch"],
            ["Списание", "decommissioned"],
            ["Передано в другое место", "transferred"],
            ["С примечанием", "with_note"]
          ], equipment.status || "active"),
          {},
          class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <!-- Предупреждение о дубликате -->
    <div id="duplicateWarning" class="hidden p-4 bg-yellow-50 border border-yellow-200 rounded-md">
      <div class="flex">
        <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
        </svg>
        <div class="ml-3">
          <p class="text-sm text-yellow-700" id="duplicateWarningText"></p>
        </div>
      </div>
    </div>

    <div>
      <%= f.label :note, "Примечания", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_area :note, 
          rows: 3,
          class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500",
          placeholder: "Дополнительная информация..." %>
    </div>
  </div>

  <div class="mt-6 flex justify-end space-x-3 pt-4 border-t border-gray-200">
    <% if equipment.persisted? %>
      <%= link_to "Отмена", cute_equipment_path(equipment), class: "px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50" %>
    <% else %>
      <%= link_to "Отмена", cute_equipments_path, class: "px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50" %>
    <% end %>
    <%= f.submit equipment.persisted? ? "Сохранить" : "Создать", 
        class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 cursor-pointer" %>
  </div>
<% end %>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const equipmentTypeSelect = document.getElementById('cute_equipment_equipment_type');
  const installationSelect = document.getElementById('cute_equipment_cute_installation_id');
  const equipmentId = <%= equipment.persisted? ? equipment.id : 'null' %>;
  
  function checkDuplicate() {
    const equipmentType = equipmentTypeSelect.value;
    const installationId = installationSelect.value;
    const warning = document.getElementById('duplicateWarning');
    const warningText = document.getElementById('duplicateWarningText');
    
    if (!equipmentType || !installationId) {
      warning.classList.add('hidden');
      return;
    }
    
    fetch('/cute_equipments/check_duplicate', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
      },
      body: JSON.stringify({
        equipment_type: equipmentType,
        installation_id: installationId,
        exclude_id: equipmentId
      })
    })
    .then(response => response.json())
    .then(data => {
      if (data.duplicate) {
        warningText.textContent = `Внимание: оборудование типа "${data.equipment.equipment_type}" уже привязано к этому месту установки (инв. №${data.equipment.inventory_number}, статус: ${data.equipment.status})`;
        warning.classList.remove('hidden');
      } else {
        warning.classList.add('hidden');
      }
    })
    .catch(error => {
      console.error('Error checking duplicate:', error);
    });
  }
  
  if (equipmentTypeSelect && installationSelect) {
    equipmentTypeSelect.addEventListener('change', checkDuplicate);
    installationSelect.addEventListener('change', checkDuplicate);
    
    // Check on load if editing existing equipment
    if (equipmentId && equipmentTypeSelect.value && installationSelect.value) {
      checkDuplicate();
    }
  }
});
</script>
