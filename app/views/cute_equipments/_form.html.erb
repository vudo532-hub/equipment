<%= simple_form_for(equipment, url: equipment.persisted? ? cute_equipment_path(equipment) : cute_equipments_path) do |f| %>
  <% if equipment.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">Обнаружены ошибки:</h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% equipment.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="space-y-6">
    <div class="grid grid-cols-1 sm:grid-cols-2" style="gap: 16px;">
      <div>
        <%= f.label :equipment_type, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :equipment_type, 
            options_for_select([
              ["Принтер посадочных талонов", "boarding_pass_printer"],
              ["Принтер багажных бирок", "baggage_tag_printer"],
              ["Клавиатура", "keyboard"],
              ["Сканер", "scanner"],
              ["Считыватель на гейте", "gate_reader"],
              ["Принтер полётной документации", "flight_document_printer"],
              ["Монитор", "monitor"],
              ["Компьютер", "computer"],
              ["Прочее", "other"]
            ], equipment.equipment_type),
            { include_blank: "Выберите тип..." },
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div>
        <%= f.label :equipment_model, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :equipment_model, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500",
            placeholder: "Модель оборудования" %>
      </div>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2" style="gap: 16px;">
      <div>
        <%= f.label :serial_number, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :serial_number, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500",
            placeholder: "Серийный номер" %>
      </div>

      <div>
        <%= f.label :inventory_number, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :inventory_number, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500",
            placeholder: "Инвентарный номер" %>
      </div>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2" style="gap: 16px;">
      <div>
        <%= f.label :status, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :status, 
            options_for_select([
              ["В работе", "active"],
              ["В ремонт", "maintenance"],
              ["Ожидается из ремонта", "waiting_repair"],
              ["Готово к выдачи", "ready_to_dispatch"],
              ["Списание", "decommissioned"],
              ["Передано в другое место", "transferred"],
              ["С примечанием", "with_note"]
            ], equipment.status || "active"),
            {},
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div>
        <%= f.label :cute_installation_id, "Место установки", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :cute_installation_id,
            options_for_select(@installations.map { |i| [i.name, i.id] }, equipment.cute_installation_id),
            { include_blank: "Не указано" },
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
      </div>
    </div>

    <div>
      <%= f.label :note, "Примечания", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_area :note, 
          rows: 3,
          class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500",
          placeholder: "Дополнительная информация..." %>
    </div>
  </div>

  <div class="mt-6 flex justify-end space-x-3 pt-4 border-t border-gray-200">
    <% if equipment.persisted? %>
      <%= link_to "Отмена", cute_equipment_path(equipment), class: "px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50" %>
    <% else %>
      <%= link_to "Отмена", cute_equipments_path, class: "px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50" %>
    <% end %>
    <%= f.submit equipment.persisted? ? "Сохранить" : "Создать", 
        class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 cursor-pointer" %>
  </div>
<% end %>
