<div class="max-w-7xl mx-auto">
  <!-- Header -->
  <div class="mb-6 flex justify-between items-center">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Оборудование CUTE</h1>
      <p class="mt-1 text-sm text-gray-600">Управление оборудованием системы CUTE</p>
    </div>
    <div class="flex gap-3">
      <%= link_to export_cute_equipments_path(format: :xlsx), class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
        <svg class="w-5 h-5 mr-2 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
        Экспорт Excel
      <% end %>
      <%= link_to new_cute_equipment_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Добавить оборудование
      <% end %>
    </div>
  </div>

  <!-- Search and Filters -->
  <div class="bg-white shadow rounded-lg mb-6 p-4">
    <%= search_form_for @q, url: cute_equipments_path, method: :get, html: { class: "flex flex-wrap gap-4 items-end" } do |f| %>
      <div class="flex-1 min-w-[200px]">
        <label class="block text-xs font-medium text-gray-500 mb-1">Поиск</label>
        <%= f.search_field :name_or_inventory_number_or_serial_number_or_equipment_model_cont,
            placeholder: "Название, инв. номер, серийный номер...",
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
      </div>
      <div class="min-w-[150px]">
        <label class="block text-xs font-medium text-gray-500 mb-1">Тип</label>
        <%= f.select :equipment_type_eq,
            options_for_select([
              ["Все типы", ""],
              ["Принтер посадочных талонов", "Принтер посадочных талонов"],
              ["Принтер багажных бирок", "Принтер багажных бирок"],
              ["Сканер штрих-кодов", "Сканер штрих-кодов"],
              ["Монитор", "Монитор"],
              ["Системный блок", "Системный блок"],
              ["Терминал", "Терминал"]
            ], @q.equipment_type_eq),
            {},
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
      </div>
      <div class="min-w-[150px]">
        <label class="block text-xs font-medium text-gray-500 mb-1">Статус</label>
        <%= f.select :status_eq,
            options_for_select([
              ["Все статусы", ""],
              ["Работает", "active"],
              ["Не работает", "inactive"],
              ["На обслуживании", "maintenance"],
              ["В архиве", "archived"]
            ], @q.status_eq),
            {},
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
      </div>
      <div class="min-w-[180px]">
        <label class="block text-xs font-medium text-gray-500 mb-1">Место установки</label>
        <%= f.select :cute_installation_id_eq,
            options_from_collection_for_select(@installations, :id, :name, @q.cute_installation_id_eq),
            { include_blank: "Все места" },
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
      </div>
      <div class="flex gap-2">
        <%= f.submit "Поиск", class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 cursor-pointer" %>
        <%= link_to "Сбросить", cute_equipments_path, class: "px-4 py-2 border border-gray-300 rounded-md hover:bg-gray-50" %>
      </div>
    <% end %>
  </div>

  <!-- Table -->
  <div class="bg-white shadow rounded-lg overflow-hidden">
    <% if @equipments.any? %>
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Название</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Тип</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Инв. номер</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Место</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Статус</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Действия</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @equipments.each do |equipment| %>
            <tr class="hover:bg-gray-50 cursor-pointer" onclick="window.location='<%= cute_equipment_path(equipment) %>'">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900"><%= equipment.name %></div>
                <% if equipment.equipment_model.present? %>
                  <div class="text-sm text-gray-500"><%= equipment.equipment_model %></div>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= equipment.equipment_type %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= equipment.inventory_number %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <% if equipment.cute_installation %>
                  <%= link_to equipment.cute_installation.name, cute_installation_path(equipment.cute_installation), 
                      class: "text-blue-600 hover:text-blue-900",
                      onclick: "event.stopPropagation()" %>
                <% else %>
                  <span class="text-gray-400">Не указано</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= equipment.status_color %>">
                  <%= equipment.status_text %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium" onclick="event.stopPropagation()">
                <%= link_to "Изменить", edit_cute_equipment_path(equipment), class: "text-indigo-600 hover:text-indigo-900 mr-4" %>
                <%= link_to "Удалить", cute_equipment_path(equipment), 
                    data: { turbo_method: :delete, turbo_confirm: "Вы уверены, что хотите удалить это оборудование?" },
                    class: "text-red-600 hover:text-red-900" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"/>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">Нет оборудования</h3>
        <p class="mt-1 text-sm text-gray-500">Начните с добавления нового оборудования.</p>
        <div class="mt-6">
          <%= link_to new_cute_equipment_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            Добавить оборудование
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
