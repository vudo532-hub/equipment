<div class="min-h-screen flex items-center justify-center bg-gray-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <%# Flash messages above the form %>
    <% if flash[:notice].present? %>
      <div class="rounded-md bg-green-50 p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <p class="text-sm font-medium text-green-800"><%= flash[:notice] %></p>
          </div>
        </div>
      </div>
    <% end %>
    <% if flash[:alert].present? %>
      <div class="rounded-md bg-red-50 p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <p class="text-sm font-medium text-red-800"><%= flash[:alert] %></p>
          </div>
        </div>
      </div>
    <% end %>

    <div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        Вход в систему
      </h2>
      <p class="mt-2 text-center text-sm text-gray-600">
        Система учёта оборудования
      </p>
    </div>

    <%= render "devise/shared/error_messages", resource: resource %>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mt-8 space-y-6" }) do |f| %>
      <div class="rounded-md shadow-sm -space-y-px">
        <div>
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      label: false,
                      placeholder: "Email",
                      input_html: { 
                        autocomplete: "email",
                        class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm"
                      } %>
        </div>
        <div>
          <%= f.input :password,
                      required: false,
                      label: false,
                      placeholder: "Пароль",
                      input_html: { 
                        autocomplete: "current-password",
                        class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm"
                      } %>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <%= f.input :remember_me, 
                        as: :boolean, 
                        label: "Запомнить меня",
                        wrapper_html: { class: "flex items-center" },
                        input_html: { class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" },
                        label_html: { class: "ml-2 block text-sm text-gray-900" } %>
          </div>

          <% if devise_mapping.recoverable? %>
            <div class="text-sm">
              <%= link_to "Забыли пароль?", new_password_path(resource_name), class: "font-medium text-blue-600 hover:text-blue-500" %>
            </div>
          <% end %>
        </div>
      <% end %>

      <div>
        <%= f.button :submit, "Войти", class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>
    <% end %>

    <% if devise_mapping.registerable? %>
      <p class="mt-2 text-center text-sm text-gray-600">
        Нет аккаунта?
        <%= link_to "Зарегистрироваться", new_registration_path(resource_name), class: "font-medium text-blue-600 hover:text-blue-500" %>
      </p>
    <% end %>
  </div>
</div>
