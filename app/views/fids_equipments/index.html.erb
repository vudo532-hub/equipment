<div class="max-w-7xl mx-auto">
  <!-- Header -->
  <div class="mb-6 flex justify-between items-center">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Оборудование FIDS</h1>
      <p class="mt-1 text-sm text-gray-600">Управление оборудованием информационной системы FIDS</p>
    </div>
    <div class="flex gap-3">
      <%= link_to export_fids_equipments_path(format: :xlsx), class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
        <svg class="w-5 h-5 mr-2 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
        Экспорт Excel
      <% end %>
      <%= link_to new_fids_equipment_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Добавить оборудование
      <% end %>
    </div>
  </div>

  <!-- Filters -->
  <div class="bg-white shadow rounded-lg mb-4 p-4">
    <h3 class="text-sm font-medium text-gray-700 mb-3">Фильтры</h3>
    <%= search_form_for @q, url: fids_equipments_path, method: :get, html: { class: "flex flex-wrap gap-4 items-end" } do |f| %>
      <div class="min-w-[150px]">
        <label class="block text-xs font-medium text-gray-500 mb-1">Терминал</label>
        <%= f.select :fids_installation_terminal_eq,
            options_for_select([
              ["Все терминалы", ""],
              ["Терминал A", "terminal_a"],
              ["Терминал B", "terminal_b"],
              ["Терминал C", "terminal_c"],
              ["Терминал D", "terminal_d"],
              ["Терминал E", "terminal_e"],
              ["Терминал F", "terminal_f"]
            ], @q.fids_installation_terminal_eq),
            {},
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-green-500 focus:border-green-500" %>
      </div>
      <div class="min-w-[180px]">
        <label class="block text-xs font-medium text-gray-500 mb-1">Тип</label>
        <%= f.select :equipment_type_eq,
            options_for_select([
              ["Все типы", ""],
              ["Монитор", "Монитор"],
              ["LED панель", "LED панель"],
              ["Информационный киоск", "Информационный киоск"],
              ["Медиаплеер", "Медиаплеер"],
              ["Видеостена", "Видеостена"],
              ["Сервер", "Сервер"]
            ], @q.equipment_type_eq),
            {},
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-green-500 focus:border-green-500" %>
      </div>
      <div class="min-w-[180px]">
        <label class="block text-xs font-medium text-gray-500 mb-1">Статус</label>
        <%= f.select :status_eq,
            options_for_select([
              ["Все статусы", ""],
              ["В работе", "active"],
              ["В ремонт", "maintenance"],
              ["Ожидается из ремонта", "waiting_repair"],
              ["Готово к выдачи", "ready_to_dispatch"],
              ["Списание", "decommissioned"],
              ["Передано в другое место", "transferred"],
              ["С примечанием", "with_note"]
            ], @q.status_eq),
            {},
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-green-500 focus:border-green-500" %>
      </div>
      <div class="min-w-[200px]">
        <label class="block text-xs font-medium text-gray-500 mb-1">Место установки</label>
        <%= f.select :fids_installation_id_eq,
            options_from_collection_for_select(@installations, :id, :name, @q.fids_installation_id_eq),
            { include_blank: "Все места" },
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-green-500 focus:border-green-500" %>
      </div>
      <div class="flex gap-2">
        <%= f.submit "Применить", class: "px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 cursor-pointer" %>
        <%= link_to "Сбросить", fids_equipments_path, class: "px-4 py-2 border border-gray-300 rounded-md hover:bg-gray-50" %>
      </div>
    <% end %>
  </div>

  <!-- Search -->
  <div class="bg-white shadow rounded-lg mb-6 p-4">
    <h3 class="text-sm font-medium text-gray-700 mb-3">Поиск</h3>
    <%= search_form_for @q, url: fids_equipments_path, method: :get, html: { class: "flex gap-4 items-end" } do |f| %>
      <div class="flex-1">
        <%= f.search_field :inventory_number_or_serial_number_or_equipment_model_or_equipment_type_cont,
            placeholder: "Введите инвентарный номер, серийный номер, модель или тип...",
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-green-500 focus:border-green-500" %>
      </div>
      <div>
        <%= f.submit "Поиск", class: "px-6 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 cursor-pointer" %>
      </div>
    <% end %>
  </div>

  <!-- Table -->
  <div class="bg-white shadow rounded-lg overflow-x-auto">
    <% if @equipments.any? %>
      <table class="w-full divide-y divide-gray-200" style="min-width: 900px;">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-4 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider" style="text-align: left;">Тип / Модель</th>
            <th class="px-4 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider" style="text-align: left;">Инв. номер</th>
            <th class="px-4 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider" style="text-align: left;">Серийный номер</th>
            <th class="px-4 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider" style="text-align: left;">Терминал</th>
            <th class="px-4 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider" style="text-align: left;">Место</th>
            <th class="px-4 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider" style="text-align: left;">Статус</th>
            <th class="px-4 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider" style="text-align: left;">Примечания</th>
            <th class="px-4 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider" style="text-align: right;">Действия</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @equipments.each do |equipment| %>
            <tr class="hover:bg-gray-50">
              <td class="px-4 py-4 whitespace-nowrap" style="cursor: pointer;" onclick="window.location='<%= fids_equipment_path(equipment) %>'">
                <div class="text-sm font-medium text-gray-900"><%= equipment.equipment_type %></div>
                <% if equipment.equipment_model.present? %>
                  <div class="text-sm text-gray-500"><%= equipment.equipment_model %></div>
                <% end %>
              </td>
              <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= equipment.inventory_number %>
              </td>
              <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= equipment.serial_number.presence || '—' %>
              </td>
              <td class="px-4 py-4 whitespace-nowrap">
                <% if equipment.terminal_name.present? %>
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                    <%= equipment.terminal_name %>
                  </span>
                <% else %>
                  <span class="text-gray-400">—</span>
                <% end %>
              </td>
              <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-500">
                <% if equipment.fids_installation %>
                  <%= link_to equipment.fids_installation.name, fids_installation_path(equipment.fids_installation), 
                      class: "text-green-600 hover:text-green-900" %>
                <% else %>
                  <span class="text-gray-400">Не указано</span>
                <% end %>
              </td>
              <td class="px-4 py-4 whitespace-nowrap">
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= equipment.status_color %>">
                  <%= equipment.status_text %>
                </span>
              </td>
              <td class="px-4 py-4 text-sm text-gray-500" style="max-width: 200px;">
                <% if equipment.note.present? %>
                  <span title="<%= equipment.note %>" class="cursor-help truncate block">
                    <%= truncate(equipment.note, length: 50) %>
                  </span>
                <% else %>
                  <span class="text-gray-400">—</span>
                <% end %>
              </td>
              <td class="px-4 py-4 whitespace-nowrap text-sm font-medium" style="text-align: right;">
                <%= link_to "Изменить", edit_fids_equipment_path(equipment), class: "text-indigo-600 hover:text-indigo-900 mr-4" %>
                <% if can_delete? %>
                  <%= link_to "Удалить", fids_equipment_path(equipment), 
                      data: { turbo_method: :delete, turbo_confirm: "Вы уверены, что хотите удалить это оборудование?" },
                      class: "text-red-600 hover:text-red-900" %>
                <% else %>
                  <%= link_to "Удалить", "#", 
                      onclick: "alert('Удаление недоступно для вашей роли'); return false;",
                      class: "text-gray-400", style: "cursor: not-allowed;" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">Нет оборудования</h3>
        <p class="mt-1 text-sm text-gray-500">Начните с добавления нового оборудования.</p>
        <div class="mt-6">
          <%= link_to new_fids_equipment_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            Добавить оборудование
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
