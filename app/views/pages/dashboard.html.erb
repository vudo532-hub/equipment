<div class="max-w-7xl mx-auto">
  <!-- Page Header -->
  <div class="mb-8">
    <h1 class="text-2xl font-bold text-gray-900">Панель управления</h1>
    <p class="mt-1 text-sm text-gray-600">Сводная статистика по оборудованию всех систем</p>
  </div>

  <!-- =========================================
       1. ОБЩЕЕ КОЛИЧЕСТВО ОБОРУДОВАНИЯ
       ========================================= -->
  <div class="bg-gradient-to-r from-indigo-600 to-indigo-800 rounded-xl shadow-lg mb-8">
    <div class="p-6 text-white">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-indigo-200 text-sm font-medium mb-1">Всего оборудования в системе</p>
          <p class="text-5xl font-bold"><%= @total_equipment %></p>
          <p class="text-indigo-200 text-sm mt-2">
            <%= @total_installations_count %> мест установки
          </p>
        </div>
        <div class="p-4 bg-white/10 rounded-full">
          <svg class="h-12 w-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"/>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- =========================================
       2. КАРТОЧКИ ПО СИСТЕМАМ (CUTE / FIDS / ZAMAR)
       ========================================= -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <!-- CUTE -->
    <div class="bg-white rounded-xl shadow-md overflow-hidden border-t-4 border-blue-500">
      <div class="p-6">
        <div class="flex items-center justify-between mb-4">
          <div class="flex items-center">
            <span class="w-3 h-3 bg-blue-500 rounded-full mr-2"></span>
            <h3 class="text-lg font-semibold text-gray-900">CUTE</h3>
          </div>
          <%= link_to cute_equipments_path, class: "text-sm text-blue-600 hover:text-blue-800 font-medium" do %>
            Перейти →
          <% end %>
        </div>
        <p class="text-4xl font-bold text-gray-900 mb-2"><%= @cute_count %></p>
        <p class="text-sm text-gray-500">единиц оборудования</p>
        <div class="mt-4 pt-4 border-t border-gray-100">
          <div class="flex justify-between text-sm">
            <span class="text-gray-500">Мест установки:</span>
            <span class="font-medium text-gray-900"><%= @cute_installations_count %></span>
          </div>
          <div class="flex justify-between text-sm mt-1">
            <span class="text-gray-500">На складе:</span>
            <span class="font-medium text-orange-600"><%= @cute_warehouse %></span>
          </div>
        </div>
      </div>
    </div>

    <!-- FIDS -->
    <div class="bg-white rounded-xl shadow-md overflow-hidden border-t-4 border-green-500">
      <div class="p-6">
        <div class="flex items-center justify-between mb-4">
          <div class="flex items-center">
            <span class="w-3 h-3 bg-green-500 rounded-full mr-2"></span>
            <h3 class="text-lg font-semibold text-gray-900">FIDS</h3>
          </div>
          <%= link_to fids_equipments_path, class: "text-sm text-green-600 hover:text-green-800 font-medium" do %>
            Перейти →
          <% end %>
        </div>
        <p class="text-4xl font-bold text-gray-900 mb-2"><%= @fids_count %></p>
        <p class="text-sm text-gray-500">единиц оборудования</p>
        <div class="mt-4 pt-4 border-t border-gray-100">
          <div class="flex justify-between text-sm">
            <span class="text-gray-500">Мест установки:</span>
            <span class="font-medium text-gray-900"><%= @fids_installations_count %></span>
          </div>
          <div class="flex justify-between text-sm mt-1">
            <span class="text-gray-500">На складе:</span>
            <span class="font-medium text-orange-600"><%= @fids_warehouse %></span>
          </div>
        </div>
      </div>
    </div>

    <!-- ZAMAR -->
    <div class="bg-white rounded-xl shadow-md overflow-hidden border-t-4 border-purple-500">
      <div class="p-6">
        <div class="flex items-center justify-between mb-4">
          <div class="flex items-center">
            <span class="w-3 h-3 bg-purple-500 rounded-full mr-2"></span>
            <h3 class="text-lg font-semibold text-gray-900">ZAMAR</h3>
          </div>
          <%= link_to zamar_equipments_path, class: "text-sm text-purple-600 hover:text-purple-800 font-medium" do %>
            Перейти →
          <% end %>
        </div>
        <p class="text-4xl font-bold text-gray-900 mb-2"><%= @zamar_count %></p>
        <p class="text-sm text-gray-500">единиц оборудования</p>
        <div class="mt-4 pt-4 border-t border-gray-100">
          <div class="flex justify-between text-sm">
            <span class="text-gray-500">Мест установки:</span>
            <span class="font-medium text-gray-900"><%= @zamar_installations_count %></span>
          </div>
          <div class="flex justify-between text-sm mt-1">
            <span class="text-gray-500">На складе:</span>
            <span class="font-medium text-orange-600"><%= @zamar_warehouse %></span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- =========================================
       3. БЛОК РЕМОНТ
       ========================================= -->
  <div class="bg-red-50 rounded-xl border border-red-200 p-6 mb-8">
    <%= link_to repairs_path, class: "block hover:opacity-90 transition-opacity" do %>
      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <div class="p-3 bg-red-100 rounded-full mr-4">
            <svg class="h-8 w-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
          </div>
          <div>
            <h3 class="text-lg font-semibold text-gray-900">Ремонт</h3>
            <p class="text-sm text-gray-600">Оборудование, требующее ремонта</p>
          </div>
        </div>
        <div class="text-right">
          <div class="flex items-center gap-6">
            <div>
              <p class="text-3xl font-bold text-red-600"><%= @repair_maintenance_count %></p>
              <p class="text-sm text-gray-500">В ремонт</p>
            </div>
            <div>
              <p class="text-3xl font-bold text-orange-600"><%= @repair_waiting_count %></p>
              <p class="text-sm text-gray-500">Ожидается из ремонта</p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- =========================================
       4. СКЛАД (Оборудование без привязки)
       ========================================= -->
  <div class="bg-orange-50 rounded-xl border border-orange-200 p-6 mb-8">
    <div class="flex items-center justify-between mb-4">
      <div class="flex items-center">
        <div class="p-3 bg-orange-100 rounded-full mr-4">
          <svg class="h-8 w-8 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
          </svg>
        </div>
        <div>
          <h3 class="text-lg font-semibold text-gray-900">На складе (без привязки к месту установки)</h3>
          <p class="text-sm text-gray-600">Оборудование, готовое к установке</p>
        </div>
      </div>
      <div class="text-right">
        <p class="text-3xl font-bold text-orange-600"><%= @total_warehouse %></p>
        <p class="text-sm text-gray-500">
          CUTE: <%= @cute_warehouse %> | FIDS: <%= @fids_warehouse %> | ZAMAR: <%= @zamar_warehouse %>
        </p>
      </div>
    </div>
    
    <!-- Детальная разбивка по моделям -->
    <% if @total_warehouse > 0 %>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-4 pt-4 border-t border-orange-200">
        <% if @cute_warehouse_by_model.any? %>
          <div>
            <h4 class="text-sm font-medium text-gray-700 mb-2">CUTE</h4>
            <ul class="text-sm space-y-1">
              <% @cute_warehouse_by_model.first(5).each do |model, count| %>
                <li class="flex justify-between">
                  <span class="text-gray-600 truncate"><%= model || "Без модели" %></span>
                  <span class="font-medium text-gray-900"><%= count %></span>
                </li>
              <% end %>
            </ul>
          </div>
        <% end %>
        
        <% if @fids_warehouse_by_model.any? %>
          <div>
            <h4 class="text-sm font-medium text-gray-700 mb-2">FIDS</h4>
            <ul class="text-sm space-y-1">
              <% @fids_warehouse_by_model.first(5).each do |model, count| %>
                <li class="flex justify-between">
                  <span class="text-gray-600 truncate"><%= model || "Без модели" %></span>
                  <span class="font-medium text-gray-900"><%= count %></span>
                </li>
              <% end %>
            </ul>
          </div>
        <% end %>
        
        <% if @zamar_warehouse_by_model.any? %>
          <div>
            <h4 class="text-sm font-medium text-gray-700 mb-2">ZAMAR</h4>
            <ul class="text-sm space-y-1">
              <% @zamar_warehouse_by_model.first(5).each do |model, count| %>
                <li class="flex justify-between">
                  <span class="text-gray-600 truncate"><%= model || "Без модели" %></span>
                  <span class="font-medium text-gray-900"><%= count %></span>
                </li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- =========================================
       5. ОБОРУДОВАНИЕ ПО ТЕРМИНАЛАМ
       ========================================= -->
  <div class="bg-white rounded-xl shadow-md mb-8">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-semibold text-gray-900">Оборудование по терминалам</h3>
      <p class="text-sm text-gray-500">Распределение установленного оборудования</p>
    </div>
    <div class="p-6">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead>
            <tr>
              <th class="px-4 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Система</th>
              <% @terminals.each do |terminal| %>
                <th class="px-4 py-3 bg-gray-50 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Терминал <%= terminal %>
                </th>
              <% end %>
              <th class="px-4 py-3 bg-gray-50 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Итого</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <!-- CUTE -->
            <tr class="hover:bg-gray-50">
              <td class="px-4 py-3 whitespace-nowrap">
                <div class="flex items-center">
                  <span class="w-3 h-3 bg-blue-500 rounded-full mr-2"></span>
                  <span class="font-medium text-gray-900">CUTE</span>
                </div>
              </td>
              <% @terminals.each do |terminal| %>
                <td class="px-4 py-3 whitespace-nowrap text-center">
                  <span class="<%= (@cute_by_terminal[terminal] || 0) > 0 ? 'text-gray-900 font-medium' : 'text-gray-400' %>">
                    <%= @cute_by_terminal[terminal] || 0 %>
                  </span>
                </td>
              <% end %>
              <td class="px-4 py-3 whitespace-nowrap text-center font-semibold text-blue-600">
                <%= @cute_by_terminal.values.sum %>
              </td>
            </tr>
            <!-- FIDS -->
            <tr class="hover:bg-gray-50">
              <td class="px-4 py-3 whitespace-nowrap">
                <div class="flex items-center">
                  <span class="w-3 h-3 bg-green-500 rounded-full mr-2"></span>
                  <span class="font-medium text-gray-900">FIDS</span>
                </div>
              </td>
              <% @terminals.each do |terminal| %>
                <td class="px-4 py-3 whitespace-nowrap text-center">
                  <span class="<%= (@fids_by_terminal[terminal] || 0) > 0 ? 'text-gray-900 font-medium' : 'text-gray-400' %>">
                    <%= @fids_by_terminal[terminal] || 0 %>
                  </span>
                </td>
              <% end %>
              <td class="px-4 py-3 whitespace-nowrap text-center font-semibold text-green-600">
                <%= @fids_by_terminal.values.sum %>
              </td>
            </tr>
            <!-- ZAMAR -->
            <tr class="hover:bg-gray-50">
              <td class="px-4 py-3 whitespace-nowrap">
                <div class="flex items-center">
                  <span class="w-3 h-3 bg-purple-500 rounded-full mr-2"></span>
                  <span class="font-medium text-gray-900">ZAMAR</span>
                </div>
              </td>
              <% @terminals.each do |terminal| %>
                <td class="px-4 py-3 whitespace-nowrap text-center">
                  <span class="<%= (@zamar_by_terminal[terminal] || 0) > 0 ? 'text-gray-900 font-medium' : 'text-gray-400' %>">
                    <%= @zamar_by_terminal[terminal] || 0 %>
                  </span>
                </td>
              <% end %>
              <td class="px-4 py-3 whitespace-nowrap text-center font-semibold text-purple-600">
                <%= @zamar_by_terminal.values.sum %>
              </td>
            </tr>
          </tbody>
          <tfoot>
            <tr class="bg-gray-50">
              <td class="px-4 py-3 whitespace-nowrap font-semibold text-gray-900">Итого</td>
              <% @terminals.each do |terminal| %>
                <td class="px-4 py-3 whitespace-nowrap text-center font-semibold text-gray-900">
                  <%= (@cute_by_terminal[terminal] || 0) + (@fids_by_terminal[terminal] || 0) + (@zamar_by_terminal[terminal] || 0) %>
                </td>
              <% end %>
              <td class="px-4 py-3 whitespace-nowrap text-center font-bold text-indigo-600">
                <%= @cute_by_terminal.values.sum + @fids_by_terminal.values.sum + @zamar_by_terminal.values.sum %>
              </td>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
  </div>

  <!-- =========================================
       5. ОБОРУДОВАНИЕ ПО ТИПАМ (По системам)
       ========================================= -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
    <!-- CUTE по типам -->
    <div class="bg-white rounded-xl shadow-md overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200 bg-blue-50">
        <h3 class="text-lg font-semibold text-gray-900 flex items-center">
          <span class="w-3 h-3 bg-blue-500 rounded-full mr-2"></span>
          CUTE по типам
        </h3>
      </div>
      <div class="p-4">
        <% if @cute_by_type.any? %>
          <div class="space-y-3">
            <% @cute_by_type.sort_by { |k, v| -v }.each do |type_key, count| %>
              <div class="flex items-center justify-between p-2 rounded-lg hover:bg-gray-50">
                <span class="text-sm text-gray-700"><%= cute_equipment_type_name(type_key) %></span>
                <span class="px-2 py-1 text-xs font-semibold bg-blue-100 text-blue-800 rounded-full"><%= count %></span>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-sm text-gray-500 text-center py-4">Нет данных</p>
        <% end %>
      </div>
    </div>

    <!-- FIDS по типам -->
    <div class="bg-white rounded-xl shadow-md overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200 bg-green-50">
        <h3 class="text-lg font-semibold text-gray-900 flex items-center">
          <span class="w-3 h-3 bg-green-500 rounded-full mr-2"></span>
          FIDS по типам
        </h3>
      </div>
      <div class="p-4">
        <% if @fids_by_type.any? %>
          <div class="space-y-3">
            <% @fids_by_type.sort_by { |k, v| -v }.each do |type_key, count| %>
              <div class="flex items-center justify-between p-2 rounded-lg hover:bg-gray-50">
                <span class="text-sm text-gray-700"><%= type_key.presence || "—" %></span>
                <span class="px-2 py-1 text-xs font-semibold bg-green-100 text-green-800 rounded-full"><%= count %></span>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-sm text-gray-500 text-center py-4">Нет данных</p>
        <% end %>
      </div>
    </div>

    <!-- ZAMAR по типам -->
    <div class="bg-white rounded-xl shadow-md overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200 bg-purple-50">
        <h3 class="text-lg font-semibold text-gray-900 flex items-center">
          <span class="w-3 h-3 bg-purple-500 rounded-full mr-2"></span>
          ZAMAR по типам
        </h3>
      </div>
      <div class="p-4">
        <% if @zamar_by_type.any? %>
          <div class="space-y-3">
            <% @zamar_by_type.sort_by { |k, v| -v }.each do |type_key, count| %>
              <div class="flex items-center justify-between p-2 rounded-lg hover:bg-gray-50">
                <span class="text-sm text-gray-700"><%= zamar_equipment_type_name(type_key) %></span>
                <span class="px-2 py-1 text-xs font-semibold bg-purple-100 text-purple-800 rounded-full"><%= count %></span>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-sm text-gray-500 text-center py-4">Нет данных</p>
        <% end %>
      </div>
    </div>
  </div>

  <!-- =========================================
       6. МАТРИЦА: CUTE типы по терминалам
       ========================================= -->
  <% if @cute_by_type.any? %>
  <div class="bg-white rounded-xl shadow-md mb-8 overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200 bg-blue-50">
      <h3 class="text-lg font-semibold text-gray-900 flex items-center">
        <span class="w-3 h-3 bg-blue-500 rounded-full mr-2"></span>
        CUTE: типы оборудования по терминалам
      </h3>
      <p class="text-sm text-gray-500">Детализированная матрица распределения</p>
    </div>
    <div class="p-6">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead>
            <tr>
              <th class="px-4 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Тип</th>
              <% @terminals.each do |terminal| %>
                <th class="px-4 py-3 bg-gray-50 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                  <%= terminal %>
                </th>
              <% end %>
              <th class="px-4 py-3 bg-gray-50 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Итого</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @cute_by_type.keys.sort.each do |type_key| %>
              <tr class="hover:bg-gray-50">
                <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-700">
                  <%= cute_equipment_type_name(type_key) %>
                </td>
                <% row_total = 0 %>
                <% @terminals.each do |terminal| %>
                  <% 
                    # Ключ матрицы: [equipment_type_int, terminal_int]
                    terminal_int = @terminals.index(terminal)
                    cell_count = @cute_type_terminal_matrix[[type_key, terminal_int]] || 0
                    row_total += cell_count
                  %>
                  <td class="px-4 py-2 whitespace-nowrap text-center">
                    <span class="<%= cell_count > 0 ? 'text-gray-900 font-medium' : 'text-gray-300' %>">
                      <%= cell_count %>
                    </span>
                  </td>
                <% end %>
                <td class="px-4 py-2 whitespace-nowrap text-center font-semibold text-blue-600">
                  <%= row_total %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <% end %>

  <!-- =========================================
       7. МАТРИЦА: ZAMAR типы по терминалам
       ========================================= -->
  <% if @zamar_by_type.any? %>
  <div class="bg-white rounded-xl shadow-md mb-8 overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200 bg-purple-50">
      <h3 class="text-lg font-semibold text-gray-900 flex items-center">
        <span class="w-3 h-3 bg-purple-500 rounded-full mr-2"></span>
        ZAMAR: типы оборудования по терминалам
      </h3>
      <p class="text-sm text-gray-500">Детализированная матрица распределения</p>
    </div>
    <div class="p-6">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead>
            <tr>
              <th class="px-4 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Тип</th>
              <% @terminals.each do |terminal| %>
                <th class="px-4 py-3 bg-gray-50 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                  <%= terminal %>
                </th>
              <% end %>
              <th class="px-4 py-3 bg-gray-50 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Итого</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @zamar_by_type.keys.sort.each do |type_key| %>
              <tr class="hover:bg-gray-50">
                <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-700">
                  <%= zamar_equipment_type_name(type_key) %>
                </td>
                <% row_total = 0 %>
                <% @terminals.each do |terminal| %>
                  <% 
                    terminal_int = @terminals.index(terminal)
                    cell_count = @zamar_type_terminal_matrix[[type_key, terminal_int]] || 0
                    row_total += cell_count
                  %>
                  <td class="px-4 py-2 whitespace-nowrap text-center">
                    <span class="<%= cell_count > 0 ? 'text-gray-900 font-medium' : 'text-gray-300' %>">
                      <%= cell_count %>
                    </span>
                  </td>
                <% end %>
                <td class="px-4 py-2 whitespace-nowrap text-center font-semibold text-purple-600">
                  <%= row_total %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <% end %>

  <!-- =========================================
       8. СТАТИСТИКА ПО СТАТУСАМ
       ========================================= -->
  <div class="bg-white rounded-xl shadow-md mb-8">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-semibold text-gray-900">Оборудование по статусам</h3>
      <p class="text-sm text-gray-500">Текущее состояние всего оборудования</p>
    </div>
    <div class="p-6">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- CUTE статусы -->
        <div>
          <h4 class="text-sm font-medium text-gray-500 mb-3 flex items-center">
            <span class="w-2 h-2 bg-blue-500 rounded-full mr-2"></span>CUTE
          </h4>
          <div class="space-y-2">
            <% @cute_by_status.sort_by { |k, v| -v }.each do |status_key, count| %>
              <div class="flex items-center justify-between">
                <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium <%= status_badge_color(status_key) %>">
                  <%= equipment_status_name(status_key) %>
                </span>
                <span class="text-sm font-medium text-gray-900"><%= count %></span>
              </div>
            <% end %>
          </div>
        </div>

        <!-- FIDS статусы -->
        <div>
          <h4 class="text-sm font-medium text-gray-500 mb-3 flex items-center">
            <span class="w-2 h-2 bg-green-500 rounded-full mr-2"></span>FIDS
          </h4>
          <div class="space-y-2">
            <% @fids_by_status.sort_by { |k, v| -v }.each do |status_key, count| %>
              <div class="flex items-center justify-between">
                <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium <%= status_badge_color(status_key) %>">
                  <%= equipment_status_name(status_key) %>
                </span>
                <span class="text-sm font-medium text-gray-900"><%= count %></span>
              </div>
            <% end %>
          </div>
        </div>

        <!-- ZAMAR статусы -->
        <div>
          <h4 class="text-sm font-medium text-gray-500 mb-3 flex items-center">
            <span class="w-2 h-2 bg-purple-500 rounded-full mr-2"></span>ZAMAR
          </h4>
          <div class="space-y-2">
            <% @zamar_by_status.sort_by { |k, v| -v }.each do |status_key, count| %>
              <div class="flex items-center justify-between">
                <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium <%= status_badge_color(status_key) %>">
                  <%= equipment_status_name(status_key) %>
                </span>
                <span class="text-sm font-medium text-gray-900"><%= count %></span>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- =========================================
       9. БЫСТРЫЕ ДЕЙСТВИЯ
       ========================================= -->
  <div class="bg-white rounded-xl shadow-md mb-8">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-semibold text-gray-900">Быстрые действия</h3>
    </div>
    <div class="p-6">
      <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-6 gap-3">
        <%= link_to new_cute_equipment_path, class: "inline-flex items-center justify-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 transition-colors" do %>
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          Оборуд. CUTE
        <% end %>
        <%= link_to new_cute_installation_path, class: "inline-flex items-center justify-center px-3 py-2 border border-blue-600 text-sm font-medium rounded-md text-blue-600 bg-white hover:bg-blue-50 transition-colors" do %>
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          Место CUTE
        <% end %>
        <%= link_to new_fids_equipment_path, class: "inline-flex items-center justify-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 transition-colors" do %>
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          Оборуд. FIDS
        <% end %>
        <%= link_to new_fids_installation_path, class: "inline-flex items-center justify-center px-3 py-2 border border-green-600 text-sm font-medium rounded-md text-green-600 bg-white hover:bg-green-50 transition-colors" do %>
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          Место FIDS
        <% end %>
        <%= link_to new_zamar_equipment_path, class: "inline-flex items-center justify-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-purple-600 hover:bg-purple-700 transition-colors" do %>
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          Оборуд. ZAMAR
        <% end %>
        <%= link_to new_zamar_installation_path, class: "inline-flex items-center justify-center px-3 py-2 border border-purple-600 text-sm font-medium rounded-md text-purple-600 bg-white hover:bg-purple-50 transition-colors" do %>
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          Место ZAMAR
        <% end %>
      </div>
    </div>
  </div>

  <!-- =========================================
       10. НЕДАВНО ДОБАВЛЕННОЕ ОБОРУДОВАНИЕ
       ========================================= -->
  <div class="bg-white rounded-xl shadow-md">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-semibold text-gray-900">Недавно добавленное оборудование</h3>
    </div>
    <div class="p-6">
      <% if @recent_equipments.any? %>
        <div class="space-y-3">
          <% @recent_equipments.each do |item| %>
            <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
              <div class="flex items-center">
                <span class="px-2 py-1 text-xs font-semibold rounded-full bg-<%= item[:color] %>-100 text-<%= item[:color] %>-800 mr-3">
                  <%= item[:system] %>
                </span>
                <%= link_to item[:path], class: "text-sm font-medium text-gray-900 hover:text-#{item[:color]}-600" do %>
                  <%= item[:equipment].respond_to?(:equipment_type_text) ? item[:equipment].equipment_type_text : item[:equipment].equipment_type %>
                <% end %>
                <span class="text-sm text-gray-500 ml-2">
                  Инв. № <%= item[:equipment].inventory_number %>
                </span>
              </div>
              <span class="text-xs text-gray-500">
                <%= format_datetime_ru(item[:equipment].created_at) %>
              </span>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-8 text-gray-500">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <p class="mt-2">Нет недавнего оборудования</p>
          <p class="text-sm">Добавьте первое оборудование через быстрые действия выше</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
