<% content_for :title, "Редактировать профиль" %>

<div class="max-w-2xl mx-auto">
  <div class="mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Редактировать профиль</h1>
    <p class="text-gray-600">Измените данные вашей учётной записи</p>
  </div>

  <% if @user.errors.any? %>
    <div class="mb-6 rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            Обнаружены ошибки (<%= @user.errors.count %>):
          </h3>
          <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Profile Info Form -->
  <div class="bg-white shadow rounded-lg overflow-hidden mb-6">
    <div class="p-6 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Личные данные</h3>
      
      <%= form_with model: @user, url: profile_path, method: :patch, local: true, class: "space-y-4" do |f| %>
        <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
          <div>
            <%= f.label :first_name, "Имя", class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :first_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
          </div>
          <div>
            <%= f.label :last_name, "Фамилия", class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :last_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
          </div>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700">Email</label>
          <p class="mt-1 text-sm text-gray-500"><%= @user.email %></p>
          <p class="text-xs text-gray-400">Email нельзя изменить</p>
        </div>

        <div class="pt-4">
          <%= f.submit "Сохранить изменения", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Password Change Form -->
  <div class="bg-white shadow rounded-lg overflow-hidden">
    <div class="p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Смена пароля</h3>
      
      <%= form_with model: @user, url: profile_path, method: :patch, local: true, class: "space-y-4" do |f| %>
        <div>
          <%= f.label :current_password, "Текущий пароль", class: "block text-sm font-medium text-gray-700" %>
          <%= f.password_field :current_password, autocomplete: "current-password", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
        </div>

        <div>
          <%= f.label :password, "Новый пароль", class: "block text-sm font-medium text-gray-700" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
          <p class="mt-1 text-xs text-gray-500">Минимум 6 символов</p>
        </div>

        <div>
          <%= f.label :password_confirmation, "Подтверждение пароля", class: "block text-sm font-medium text-gray-700" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
        </div>

        <div class="pt-4">
          <%= f.submit "Изменить пароль", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="mt-6">
    <%= link_to "← Назад к профилю", profile_path, class: "text-sm text-blue-600 hover:text-blue-500" %>
  </div>
</div>
