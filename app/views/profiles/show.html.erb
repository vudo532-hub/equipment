<% content_for :title, "Мой профиль" %>

<div class="max-w-4xl mx-auto">
  <div class="mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Мой профиль</h1>
    <p class="text-gray-600">Информация о вашей учётной записи</p>
  </div>

  <div class="bg-white shadow rounded-lg overflow-hidden">
    <!-- Profile Info -->
    <div class="p-6 border-b border-gray-200">
      <div class="flex items-center">
        <div class="h-20 w-20 rounded-full bg-blue-500 flex items-center justify-center text-white text-2xl font-bold">
          <%= @user.initials || '?' %>
        </div>
        <div class="ml-6">
          <h2 class="text-xl font-semibold text-gray-900"><%= @user.full_name %></h2>
          <p class="text-gray-500"><%= @user.email %></p>
          <div class="mt-2">
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium
              <%= case @user.role
                  when 'admin' then 'bg-red-100 text-red-800'
                  when 'manager' then 'bg-purple-100 text-purple-800'
                  when 'editor' then 'bg-blue-100 text-blue-800'
                  else 'bg-gray-100 text-gray-800'
                  end %>">
              <%= @user.role_name %>
            </span>
          </div>
        </div>
      </div>
    </div>

    <!-- Account Details -->
    <div class="p-6 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Данные аккаунта</h3>
      <dl class="grid grid-cols-1 gap-x-4 gap-y-4 sm:grid-cols-2">
        <div>
          <dt class="text-sm font-medium text-gray-500">Имя</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @user.first_name %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Фамилия</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @user.last_name %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Email</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @user.email %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Роль</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @user.role_name %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Дата регистрации</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= l(@user.created_at, format: :long) %></dd>
        </div>
      </dl>
    </div>

    <!-- Permissions -->
    <div class="p-6 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Права доступа</h3>
      <ul class="space-y-2">
        <li class="flex items-center">
          <svg class="h-5 w-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
          </svg>
          <span class="text-sm text-gray-700">Просмотр оборудования и инсталляций</span>
        </li>
        <% if @user.can_edit? %>
          <li class="flex items-center">
            <svg class="h-5 w-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
            <span class="text-sm text-gray-700">Создание и редактирование записей</span>
          </li>
        <% else %>
          <li class="flex items-center">
            <svg class="h-5 w-5 text-gray-300 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
            </svg>
            <span class="text-sm text-gray-400">Создание и редактирование записей</span>
          </li>
        <% end %>
        <% if @user.can_manage? %>
          <li class="flex items-center">
            <svg class="h-5 w-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
            <span class="text-sm text-gray-700">Удаление записей</span>
          </li>
        <% else %>
          <li class="flex items-center">
            <svg class="h-5 w-5 text-gray-300 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
            </svg>
            <span class="text-sm text-gray-400">Удаление записей</span>
          </li>
        <% end %>
        <% if @user.admin? %>
          <li class="flex items-center">
            <svg class="h-5 w-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
            <span class="text-sm text-gray-700">Управление пользователями</span>
          </li>
        <% else %>
          <li class="flex items-center">
            <svg class="h-5 w-5 text-gray-300 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
            </svg>
            <span class="text-sm text-gray-400">Управление пользователями</span>
          </li>
        <% end %>
      </ul>
    </div>

    <!-- Actions -->
    <div class="p-6 bg-gray-50">
      <%= link_to edit_profile_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700" do %>
        <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
        Редактировать профиль
      <% end %>
    </div>
  </div>
</div>
