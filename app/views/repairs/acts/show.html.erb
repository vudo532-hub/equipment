<div class="max-w-5xl mx-auto">
  <!-- Header -->
  <div class="mb-6">
    <nav class="flex mb-4" aria-label="Breadcrumb">
      <ol class="flex items-center space-x-2">
        <li><%= link_to "Ремонт", repairs_path, class: "text-gray-500 hover:text-gray-700" %></li>
        <li><%= link_to "Акты ремонта", repairs_acts_path, class: "text-gray-500 hover:text-gray-700" %></li>
        <li class="flex items-center">
          <svg class="w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
          </svg>
          <span class="ml-2 text-gray-700">Акт <%= @batch.repair_number %></span>
        </li>
      </ol>
    </nav>
    <div class="flex justify-between items-start">
      <div>
        <h1 class="text-2xl font-bold text-gray-900">Акт передачи в ремонт</h1>
        <p class="mt-1 text-sm text-gray-600"><%= @batch.repair_number %></p>
      </div>
      <div class="flex gap-2">
        <%= link_to export_to_excel_repairs_act_path(@batch, format: :xlsx), class: "inline-flex items-center px-4 py-2 border border-green-600 rounded-md shadow-sm text-sm font-medium text-green-600 bg-white hover:bg-green-50" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
          Экспорт в Excel
        <% end %>
      </div>
    </div>
  </div>

  <!-- Info Card -->
  <div class="bg-white shadow rounded-lg mb-6">
    <div class="px-4 py-5 sm:p-6">
      <dl class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
        <div>
          <dt class="text-sm font-medium text-gray-500">Номер акта</dt>
          <dd class="mt-1 text-lg font-semibold text-gray-900"><%= @batch.repair_number %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Дата создания</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= l(@batch.created_at, format: :long) %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Создал</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @batch.user&.full_name || "—" %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Статус</dt>
          <dd class="mt-1">
            <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full <%= @batch.status_color %>">
              <%= @batch.status_text %>
            </span>
          </dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Количество оборудования</dt>
          <dd class="mt-1 text-lg font-semibold text-orange-600"><%= @batch.equipment_count %> ед.</dd>
        </div>
      </dl>
    </div>
  </div>

  <!-- Equipment Table -->
  <div class="bg-white shadow rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Оборудование в акте</h3>
      
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase">№</th>
              <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase">Тип</th>
              <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase">Модель</th>
              <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase">Инв. №</th>
              <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase">Сер. №</th>
              <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase">Номер заявки</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @items.each_with_index do |item, index| %>
              <tr class="hover:bg-gray-50">
                <td class="px-3 py-3 text-sm text-gray-500"><%= index + 1 %></td>
                <td class="px-3 py-3 text-sm">
                  <span class="px-2 py-1 text-xs font-semibold rounded-full 
                    <%= case item.system
                        when 'CUTE' then 'bg-blue-100 text-blue-800'
                        when 'FIDS' then 'bg-green-100 text-green-800'
                        when 'Zamar' then 'bg-purple-100 text-purple-800'
                        end %>">
                    <%= item.equipment_type_display %>
                  </span>
                </td>
                <td class="px-3 py-3 text-sm text-gray-900"><%= item.model || "—" %></td>
                <td class="px-3 py-3 text-sm text-gray-500"><%= item.inventory_number %></td>
                <td class="px-3 py-3 text-sm text-gray-500"><%= item.serial_number || "—" %></td>
                <td class="px-3 py-3 text-sm text-gray-500"><%= item.repair_ticket_number || "—" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
