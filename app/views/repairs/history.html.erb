<div class="max-w-7xl mx-auto">
  <!-- Header -->
  <div class="mb-6">
    <nav class="flex mb-4" aria-label="Breadcrumb">
      <ol class="flex items-center space-x-2">
        <li><%= link_to "Ремонт", repairs_path, class: "text-gray-500 hover:text-gray-700" %></li>
        <li class="flex items-center">
          <svg class="w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
          </svg>
          <span class="ml-2 text-gray-700">История ремонта</span>
        </li>
      </ol>
    </nav>
    <h1 class="text-2xl font-bold text-gray-900">История ремонта</h1>
    <p class="mt-1 text-sm text-gray-600">Все отправки оборудования в ремонт</p>
  </div>

  <!-- Filters -->
  <div class="bg-white shadow rounded-lg mb-6">
    <div class="px-4 py-5 sm:p-6">
      <%= form_with url: history_repairs_path, method: :get, local: true, class: "space-y-4" do %>
        <div class="flex flex-wrap gap-4 items-end">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Серийный номер</label>
            <%= text_field_tag :serial_number, params[:serial_number], 
                placeholder: "Поиск по серийному номеру...",
                class: "px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-orange-500 focus:border-orange-500" %>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Система</label>
            <%= select_tag "q[system_eq]", 
                options_for_select([
                  ["Все системы", ""],
                  ["CUTE", "CUTE"],
                  ["FIDS", "FIDS"],
                  ["Zamar", "Zamar"]
                ], params.dig(:q, :system_eq)),
                class: "px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-orange-500 focus:border-orange-500" %>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Дата от</label>
            <%= date_field_tag :date_from, params[:date_from],
                class: "px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-orange-500 focus:border-orange-500" %>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Дата до</label>
            <%= date_field_tag :date_to, params[:date_to],
                class: "px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-orange-500 focus:border-orange-500" %>
          </div>

          <div class="flex gap-2">
            <%= submit_tag "Применить", class: "px-4 py-2 bg-orange-600 text-white rounded-md hover:bg-orange-700 cursor-pointer" %>
            <%= link_to "Сбросить", history_repairs_path, class: "px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Statistics -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
    <div class="bg-white shadow rounded-lg p-4">
      <div class="flex items-center">
        <div class="flex-shrink-0 bg-orange-100 rounded-md p-3">
          <svg class="h-6 w-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-500">Всего отправлено</p>
          <p class="text-2xl font-semibold text-gray-900"><%= @total_count %></p>
        </div>
      </div>
    </div>
    
    <div class="bg-white shadow rounded-lg p-4">
      <div class="flex items-center">
        <div class="flex-shrink-0 bg-blue-100 rounded-md p-3">
          <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-500">Уникальных С/Н</p>
          <p class="text-2xl font-semibold text-gray-900"><%= @unique_serials %></p>
        </div>
      </div>
    </div>
    
    <div class="bg-white shadow rounded-lg p-4">
      <div class="flex items-center">
        <div class="flex-shrink-0 bg-green-100 rounded-md p-3">
          <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-500">Топ модель</p>
          <p class="text-lg font-semibold text-gray-900">
            <% if @top_models.any? %>
              <%= @top_models.first[0] || "—" %> (<%= @top_models.first[1] %>)
            <% else %>
              —
            <% end %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Serial Number Stats (if searching) -->
  <% if @serial_stats.present? %>
    <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4 mb-6">
      <h3 class="text-lg font-medium text-yellow-800 mb-2">
        Статистика для С/Н: <%= params[:serial_number] %>
      </h3>
      <p class="text-sm text-yellow-700 mb-3">
        Отправлялось в ремонт: <strong><%= @serial_stats[:total_repairs] %> раз(а)</strong>
      </p>
      <div class="space-y-1">
        <% @serial_stats[:dates].each do |entry| %>
          <div class="flex items-center text-sm text-yellow-700">
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
            </svg>
            <%= entry[:date].strftime("%d.%m.%Y %H:%M") %> — 
            <%= link_to entry[:batch_number], repair_path(RepairBatch.find_by(repair_number: entry[:batch_number])), class: "underline hover:text-yellow-900" %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- History Table -->
  <div class="bg-white shadow rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">История отправок</h3>
      
      <% if @items.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase">Дата</th>
                <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase">Акт</th>
                <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase">Система</th>
                <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase">Модель</th>
                <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase">С/Н</th>
                <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase">Инв. №</th>
                <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase">Терминал</th>
                <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase">Место</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @items.limit(100).each do |item| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-3 py-3 text-sm text-gray-500">
                    <%= item.created_at.strftime("%d.%m.%Y %H:%M") %>
                  </td>
                  <td class="px-3 py-3 text-sm">
                    <%= link_to item.repair_batch.repair_number, repair_path(item.repair_batch), class: "text-orange-600 hover:text-orange-900" %>
                  </td>
                  <td class="px-3 py-3 text-sm">
                    <span class="px-2 py-1 text-xs font-semibold rounded-full 
                      <%= case item.system
                          when 'CUTE' then 'bg-blue-100 text-blue-800'
                          when 'FIDS' then 'bg-green-100 text-green-800'
                          when 'Zamar' then 'bg-purple-100 text-purple-800'
                          end %>">
                      <%= item.system %>
                    </span>
                  </td>
                  <td class="px-3 py-3 text-sm text-gray-900"><%= item.model || "—" %></td>
                  <td class="px-3 py-3 text-sm text-gray-500"><%= item.serial_number || "—" %></td>
                  <td class="px-3 py-3 text-sm text-gray-500"><%= item.inventory_number %></td>
                  <td class="px-3 py-3 text-sm text-gray-500"><%= item.terminal || "—" %></td>
                  <td class="px-3 py-3 text-sm text-gray-500"><%= item.installation_name || "—" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        
        <% if @items.count > 100 %>
          <p class="mt-4 text-sm text-gray-500 text-center">
            Показано 100 из <%= @items.count %> записей. Используйте фильтры для уточнения поиска.
          </p>
        <% end %>
      <% else %>
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">История пуста</h3>
          <p class="mt-1 text-sm text-gray-500">Ещё не было отправок в ремонт.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
