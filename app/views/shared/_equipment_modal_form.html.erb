<turbo-frame id="equipment-modal-frame" class="block">
  <%# Modal Title %>
  <div class="mb-6">
    <h2 class="text-xl font-bold text-gray-900">
      <%= equipment.persisted? ? modal_title_for_edit(equipment, equipment_type) : modal_title_for_new(equipment_type) %>
    </h2>
  </div>

  <%# Error Messages %>
  <% if equipment.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6" role="alert">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            Обнаружены ошибки:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% equipment.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <%# Form %>
  <%= form_with(model: equipment, url: form_path_for_equipment(equipment, equipment_type), local: true, class: "space-y-6", data: { turbo_frame: "equipment-modal-frame" }) do |form| %>
    <%# Equipment Type %>
    <div class="grid grid-cols-1 sm:grid-cols-2" style="gap: 16px;">
      <div>
        <%= form.label :equipment_type, "Тип оборудования", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.select :equipment_type, 
            options_for_select([
              ["Принтер посадочных талонов", "boarding_pass_printer"],
              ["Принтер багажных бирок", "baggage_tag_printer"],
              ["Клавиатура", "keyboard"],
              ["Сканер", "scanner"],
              ["Считыватель на гейте", "gate_reader"],
              ["Принтер полётной документации", "flight_document_printer"],
              ["Монитор", "monitor"],
              ["Компьютер", "computer"],
              ["Прочее", "other"]
            ], equipment.equipment_type),
            { include_blank: "Выберите тип..." },
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <%# Equipment Model %>
      <div>
        <%= form.label :equipment_model, "Модель оборудования", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_field :equipment_model, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500",
            placeholder: "Например: Zebra ZD421" %>
      </div>
    </div>

    <%# Serial and Inventory Numbers %>
    <div class="grid grid-cols-1 sm:grid-cols-2" style="gap: 16px;">
      <div>
        <%= form.label :serial_number, "Серийный номер", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_field :serial_number,
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500",
            placeholder: "SN..." %>
      </div>

      <div>
        <%= form.label :inventory_number, "Инвентарный номер", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_field :inventory_number,
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500",
            placeholder: "INV-..." %>
      </div>
    </div>

    <%# Status %>
    <div>
      <%= form.label :status, "Статус", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.select :status,
          options_for_select([
            ["В работе", "active"],
            ["В ремонт", "maintenance"],
            ["Ожидается из ремонта", "waiting_repair"],
            ["Готово к выдачи", "ready_to_dispatch"],
            ["Списание", "decommissioned"],
            ["Передано в другое место", "transferred"]
          ], equipment.status),
          { include_blank: "Выберите статус..." },
          class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <%# Note / Remarks %>
    <div>
      <%= form.label :note, "Примечание", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_area :note,
          rows: 3,
          class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500",
          placeholder: "Дополнительная информация об оборудовании..." %>
    </div>

    <%# Form Actions %>
    <div class="flex gap-3 pt-6 border-t border-gray-200">
      <button type="submit" 
              class="flex-1 inline-flex cursor-pointer justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 disabled:opacity-50 disabled:cursor-not-allowed">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
        </svg>
        <%= equipment.persisted? ? "Сохранить изменения" : "Добавить оборудование" %>
      </button>
      <button type="button" 
              onclick="closeEquipmentModal()"
              class="inline-flex justify-center cursor-pointer items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
        Отменить
      </button>
    </div>
  <% end %>
</turbo-frame>
