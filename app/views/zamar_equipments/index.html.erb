<div class="max-w-7xl mx-auto">
  <!-- Header -->
  <div class="mb-6 flex justify-between items-center">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Оборудование ZAMAR</h1>
      <p class="mt-1 text-sm text-gray-600">Управление оборудованием системы ZAMAR</p>
    </div>
    <div class="flex gap-4">
      <%= link_to export_zamar_equipments_path(format: :xlsx), class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
        <svg class="w-5 h-5 mr-2 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
        Экспорт Excel
      <% end %>
      <a href="<%= new_zamar_equipment_path(format: :turbo_stream) %>"
         data-turbo-frame="equipment-modal-frame"
         onclick="openEquipmentModal(); return false;"
         class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-purple-600 hover:bg-purple-700 cursor-pointer">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Добавить оборудование
      </a>
    </div>
  </div>

  <!-- Filters -->
  <div class="bg-white shadow rounded-lg mt-6 mb-4 p-4">
    <h3 class="text-sm font-medium text-gray-700 mb-3">Фильтры и поиск</h3>
    <%= search_form_for @q, url: zamar_equipments_path, method: :get, html: { class: "space-y-4" } do |f| %>
      <div class="flex flex-wrap gap-4 items-end">
        <div class="min-w-[150px]">
          <label class="block text-xs font-medium text-gray-500 mb-1">Терминал</label>
          <%= f.select :zamar_installation_terminal_eq,
              options_for_select([
                ["Все терминалы", ""],
                ["Терминал A", 0],
                ["Терминал B", 1],
                ["Терминал C", 2],
                ["Терминал D", 3],
                ["Терминал E", 4],
                ["Терминал F", 5]
              ], @q.zamar_installation_terminal_eq),
              {},
              class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-purple-500 focus:border-purple-500" %>
        </div>
        <div class="min-w-[150px]">
          <label class="block text-xs font-medium text-gray-500 mb-1">Тип оборудования</label>
          <%= f.select :equipment_type_eq,
              options_for_select(
                [["Все типы", ""]] + EquipmentType.where(system: 'zamar', active: true).order(:position).pluck(:name, :code),
                @q.equipment_type_eq
              ),
              {},
              class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-purple-500 focus:border-purple-500" %>
        </div>
        <div class="min-w-[180px]">
          <label class="block text-xs font-medium text-gray-500 mb-1">Статус</label>
          <%= f.select :status_eq,
              options_for_select([
                ["Все статусы", ""],
                ["В работе", "active"],
                ["В ремонт", "maintenance"],
                ["Ожидается из ремонта", "waiting_repair"],
                ["Готово к выдачи", "ready_to_dispatch"],
                ["Списание", "decommissioned"],
                ["Передано в другое место", "transferred"],
                ["С примечанием", "with_note"]
              ], @q.status_eq),
              {},
              class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-purple-500 focus:border-purple-500" %>
        </div>
        <div class="min-w-[200px]">
          <label class="block text-xs font-medium text-gray-500 mb-1">Тип места установки</label>
          <%= f.select :zamar_installation_installation_type_eq,
              options_for_select(
                [["Все типы мест", ""]] + InstallationType.where(system: 'zamar', active: true).order(:position).pluck(:name, :name),
                @q.zamar_installation_installation_type_eq
              ),
              {},
              class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-purple-500 focus:border-purple-500" %>
        </div>
      </div>
      <div class="flex flex-wrap gap-4 items-end">
        <div class="flex-1 min-w-[300px]">
          <label class="block text-xs font-medium text-gray-500 mb-1">Поиск</label>
          <%= f.search_field :inventory_number_or_serial_number_or_equipment_model_cont,
              placeholder: "Введите инвентарный номер, серийный номер или модель...",
              class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-purple-500 focus:border-purple-500" %>
        </div>
        <div class="flex gap-2">
          <%= f.submit "Применить", class: "px-4 py-2 bg-purple-600 text-white rounded-md hover:bg-purple-700 cursor-pointer" %>
          <%= link_to "Сбросить", zamar_equipments_path, class: "px-4 py-2 border border-gray-300 rounded-md hover:bg-gray-50" %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Table -->
  <div class="bg-white shadow mt-6 rounded-lg overflow-x-auto">
    <% if @equipments.any? %>
      <table class="w-full divide-y divide-gray-200" style="min-width: 900px;">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-4 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider" style="text-align: left;">Тип / Модель</th>
            <th class="px-4 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider" style="text-align: left;">Инв. номер</th>
            <th class="px-4 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider" style="text-align: left;">Серийный номер</th>
            <th class="px-4 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider" style="text-align: left;">Терминал</th>
            <th class="px-4 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider" style="text-align: left;">Тип места</th>
            <th class="px-4 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider" style="text-align: left;">Место</th>
            <th class="px-4 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider" style="text-align: left;">Статус</th>
            <th class="px-4 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider" style="text-align: left;">Примечания</th>
            <th class="px-4 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider" style="text-align: right;">Действия</th>
          </tr>
        </thead>
        <tbody id="equipment-table-body" class="bg-white divide-y divide-gray-200">
          <% @equipments.each do |equipment| %>
            <tr class="hover:bg-gray-50">
              <td class="px-4 py-4 whitespace-nowrap" style="cursor: pointer;" onclick="window.location='<%= zamar_equipment_path(equipment) %>'">
                <div class="text-sm font-medium text-gray-900"><%= equipment.equipment_type_text %></div>
                <% if equipment.equipment_model.present? %>
                  <div class="text-sm text-gray-500"><%= equipment.equipment_model %></div>
                <% end %>
              </td>
              <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= equipment.inventory_number %>
              </td>
              <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= equipment.serial_number.presence || '—' %>
              </td>
              <td class="px-4 py-4 whitespace-nowrap">
                <% if equipment.terminal_name.present? %>
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-purple-100 text-purple-800">
                    <%= equipment.terminal_name %>
                  </span>
                <% else %>
                  <span class="text-gray-400">—</span>
                <% end %>
              </td>
              <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= equipment.zamar_installation&.installation_type.presence || '—' %>
              </td>
              <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-500">
                <% if equipment.zamar_installation %>
                  <%= link_to equipment.zamar_installation.name, zamar_installation_path(equipment.zamar_installation), 
                      class: "text-purple-600 hover:text-purple-900" %>
                <% else %>
                  <span class="text-gray-400">Не указано</span>
                <% end %>
              </td>
              <td class="px-4 py-4 whitespace-nowrap">
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= equipment.status_color %>">
                  <%= equipment.status_text %>
                </span>
              </td>
              <td class="px-4 py-4 text-sm text-gray-500" style="max-width: 200px;">
                <% if equipment.note.present? %>
                  <span title="<%= equipment.note %>" class="cursor-help truncate block">
                    <%= truncate(equipment.note, length: 50) %>
                  </span>
                <% else %>
                  <span class="text-gray-400">—</span>
                <% end %>
              </td>
              <td class="px-4 py-4 whitespace-nowrap text-sm font-medium" style="text-align: right;">
                <a href="<%= edit_zamar_equipment_path(equipment, format: :turbo_stream) %>"
                   data-turbo-frame="equipment-modal-frame"
                   onclick="openEquipmentModal(); return false;"
                   class="text-indigo-600 hover:text-indigo-900 mr-4 cursor-pointer">
                  <svg class="w-4 h-4 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                  </svg>
                </a>
                <% if can_delete? %>
                  <%= link_to "Удалить", zamar_equipment_path(equipment), 
                      data: { turbo_method: :delete, turbo_confirm: "Вы уверены, что хотите удалить это оборудование?" },
                      class: "text-red-600 hover:text-red-900" %>
                <% else %>
                  <%= link_to "Удалить", "#", 
                      onclick: "alert('Удаление недоступно для вашей роли'); return false;",
                      class: "text-gray-400 cursor-not-allowed" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <!-- Пагинация -->
      <div class="px-6 py-4 border-t border-gray-200 flex items-center justify-between">
        <div class="flex items-center gap-4">
          <span class="text-sm text-gray-500">
            Показано <%= @pagy.from %>–<%= @pagy.to %> из <%= @pagy.count %> записей
          </span>
          <div class="flex items-center gap-2">
            <span class="text-sm text-gray-500">Показать:</span>
            <%= form_with url: zamar_equipments_path, method: :get, local: true, class: "inline" do |f| %>
              <% # Сохраняем текущие параметры фильтра %>
              <% params[:q]&.each do |key, value| %>
                <% if value.present? %>
                  <%= hidden_field_tag "q[#{key}]", value %>
                <% end %>
              <% end %>
              <%= f.select :per_page, [[20, 20], [50, 50], [100, 100]], 
                  { selected: @per_page },
                  { class: 'px-2 py-1 border border-gray-300 rounded text-sm', onchange: 'this.form.submit()' } %>
            <% end %>
          </div>
        </div>
        <div>
          <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
        </div>
      </div>
    <% else %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"/>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">Нет оборудования</h3>
        <p class="mt-1 text-sm text-gray-500">Начните с добавления нового оборудования.</p>
        <div class="mt-6">
          <%= link_to new_zamar_equipment_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            Добавить оборудование
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Flash messages container -->
  <div id="flash-messages"></div>

  <!-- Equipment Modal -->
  <%= render "shared/equipment_modal" %>
</div>
