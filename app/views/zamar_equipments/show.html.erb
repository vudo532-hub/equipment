<div class="max-w-4xl mx-auto">
  <!-- Header -->
  <div class="mb-6">
    <nav class="flex mb-4" aria-label="Breadcrumb">
      <ol class="flex items-center space-x-2">
        <li><%= link_to "Оборудование ZAMAR", zamar_equipments_path, class: "text-gray-500 hover:text-gray-700" %></li>
        <li class="flex items-center">
          <svg class="w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
          </svg>
          <span class="ml-2 text-gray-700"><%= @equipment.equipment_type_text %></span>
        </li>
      </ol>
    </nav>
    <div class="flex justify-between items-start">
      <div>
        <h1 class="text-2xl font-bold text-gray-900"><%= @equipment.equipment_type_text %></h1>
        <div class="mt-2 flex items-center space-x-4">
          <span class="py-1 inline-flex text-sm leading-5 font-semibold rounded-full <%= @equipment.status_color %>">
            <%= @equipment.status_text %>
          </span>
          <span class="text-sm text-gray-500">Инв. № <%= @equipment.inventory_number %></span>
        </div>
      </div>
      <div class="flex space-x-3">
        <%= link_to new_zamar_equipment_path(format: :turbo_stream),
            data: { turbo_frame: "equipment-modal-frame" },
            class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-purple-600 hover:bg-purple-700" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          Добавить новое
        <% end %>
        <%= link_to edit_zamar_equipment_path(@equipment, format: :turbo_stream),
            data: { turbo_frame: "equipment-modal-frame" },
            class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
          </svg>
          Редактировать
        <% end %>
        <% if can_delete? %>
          <%= link_to zamar_equipment_path(@equipment),
              data: { turbo_method: :delete, turbo_confirm: "Вы уверены?" },
              class: "inline-flex items-center px-4 py-2 border border-red-300 rounded-md shadow-sm text-sm font-medium text-red-700 bg-white hover:bg-red-50" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
            </svg>
            Удалить
          <% end %>
        <% else %>
          <%= link_to "#",
              onclick: "alert('Удаление недоступно для вашей роли'); return false;",
              class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-400 bg-gray-100 cursor-not-allowed" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
            </svg>
            Удалить
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Info Card -->
  <div class="bg-white shadow mt-6 rounded-lg mb-6">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Основная информация</h3>
      <dl class="grid grid-cols-1 sm:grid-cols-2" style="gap: 16px;">
        <div>
          <dt class="text-sm font-medium text-gray-500">Тип оборудования</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @equipment.equipment_type_text %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Модель</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @equipment.equipment_model.presence || "—" %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Серийный номер</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @equipment.serial_number.presence || "—" %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Инвентарный номер</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @equipment.inventory_number %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Статус</dt>
          <dd class="mt-1">
            <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full <%= @equipment.status_color %>">
              <%= @equipment.status_text %>
            </span>
          </dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Терминал</dt>
          <dd class="mt-1">
            <% if @equipment.terminal.present? %>
              <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-purple-100 text-purple-800">
                <%= @equipment.terminal_name %>
              </span>
            <% else %>
              <span class="text-gray-400">—</span>
            <% end %>
          </dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Место установки</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <% if @equipment.zamar_installation %>
              <% if @equipment.terminal.present? %>
                <span class="text-gray-500"><%= @equipment.terminal_name %>,</span>
              <% end %>
              <%= link_to @equipment.zamar_installation.name, zamar_installation_path(@equipment.zamar_installation), class: "text-purple-600 hover:text-purple-900" %>
            <% else %>
              <span class="text-gray-400">Не указано</span>
            <% end %>
          </dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Последнее действие</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <% if @equipment.last_changed_by || @equipment.last_action_date %>
              <div class="flex items-center">
                <% if @equipment.last_changed_by %>
                  <div class="h-6 w-6 rounded-full bg-purple-500 flex items-center justify-center text-white text-xs font-medium mr-2">
                    <%= @equipment.last_changed_by.initials || '?' %>
                  </div>
                  <span class="font-medium"><%= @equipment.last_changed_by.full_name %></span>
                  <% if @equipment.last_action_date %>
                    <span class="text-gray-500 ml-1">• <%= format_datetime_ru(@equipment.last_action_date) %></span>
                  <% end %>
                <% elsif @equipment.last_action_date %>
                  <%= format_datetime_ru(@equipment.last_action_date) %>
                <% end %>
              </div>
            <% else %>
              <span class="text-gray-400">—</span>
            <% end %>
          </dd>
        </div>
        <div class="sm:col-span-2">
          <dt class="text-sm font-medium text-gray-500">Примечания</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @equipment.note.presence || "—" %></dd>
        </div>
      </dl>
    </div>
  </div>

  <!-- System Info -->
  <div class="bg-white shadow mt-6 rounded-lg mb-6">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Системная информация</h3>
      <dl class="grid grid-cols-1 sm:grid-cols-2" style="gap: 16px;">
        <div>
          <dt class="text-sm font-medium text-gray-500">Создано</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= l @equipment.created_at, format: :long %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Обновлено</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= l @equipment.updated_at, format: :long %></dd>
        </div>
      </dl>
    </div>
  </div>

  <!-- Audit History -->
  <div class="bg-white shadow rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">История изменений</h3>
      
      <div id="auditHistoryContainer" class="space-y-3">
        <% @equipment.audits.includes(:user).order(created_at: :desc).limit(30).each do |audit| %>
          <div class="flex items-start space-x-3 p-3 bg-gray-50 rounded-md">
            <div class="flex-shrink-0">
              <%= audit_action_icon(audit.action) %>
            </div>
            <div class="flex-1 min-w-0">
              <p class="text-sm text-gray-900">
                <%= format_audit_action(audit, ZamarEquipment) %>
              </p>
              <p class="text-xs text-gray-500 mt-1">
                <% if audit.user %>
                  <span class="font-medium"><%= audit.user.full_name %></span> • 
                <% end %>
                <%= format_datetime_ru(audit.created_at) %>
              </p>
            </div>
          </div>
        <% end %>
        
        <% if @equipment.audits.count == 0 %>
          <p class="text-gray-500 text-sm text-center py-4">История изменений пуста</p>
        <% end %>
      </div>
      
      <% if @equipment.audits.count > 30 %>
        <div id="loadMoreContainer" class="mt-4 text-center">
          <button type="button" 
                  onclick="loadMoreAuditHistory()"
                  id="loadMoreBtn"
                  class="px-4 py-2 text-sm font-medium text-purple-600 bg-purple-50 rounded-md hover:bg-purple-100">
            Загрузить ещё
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  let currentPage = 1;
  const equipmentId = <%= @equipment.id %>;
  
  function loadMoreAuditHistory() {
    currentPage++;
    const btn = document.getElementById('loadMoreBtn');
    btn.textContent = 'Загрузка...';
    btn.disabled = true;
    
    fetch(`/zamar_equipments/${equipmentId}/audit_history?page=${currentPage}`)
      .then(response => response.json())
      .then(data => {
        const container = document.getElementById('auditHistoryContainer');
        
        data.audits.forEach(audit => {
          const auditHtml = `
            <div class="flex items-start space-x-3 p-3 bg-gray-50 rounded-md">
              <div class="flex-shrink-0">
                ${audit.action_icon}
              </div>
              <div class="flex-1 min-w-0">
                <p class="text-sm text-gray-900">${audit.action_text}</p>
                <p class="text-xs text-gray-500 mt-1">
                  <span class="font-medium">${audit.user_name}</span> • ${audit.created_at}
                </p>
              </div>
            </div>
          `;
          container.insertAdjacentHTML('beforeend', auditHtml);
        });
        
        if (!data.has_more) {
          document.getElementById('loadMoreContainer').style.display = 'none';
        } else {
          btn.textContent = 'Загрузить ещё';
          btn.disabled = false;
        }
      })
      .catch(error => {
        console.error('Error loading audit history:', error);
        btn.textContent = 'Ошибка загрузки';
        setTimeout(() => {
          btn.textContent = 'Загрузить ещё';
          btn.disabled = false;
        }, 2000);
      });
  }
</script>

<!-- Flash messages container -->
<div id="flash-messages"></div>

