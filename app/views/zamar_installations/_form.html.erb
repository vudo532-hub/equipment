<%= simple_form_for(installation, url: installation.persisted? ? zamar_installation_path(installation) : zamar_installations_path) do |f| %>
  <% if installation.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            Обнаружены ошибки:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% installation.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="space-y-6">
    <div>
      <%= f.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :name, 
          class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500",
          placeholder: "Например: DSM-001" %>
    </div>

    <div>
      <%= f.label :terminal, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.select :terminal, 
          options_for_select([
            ["Терминал A", "terminal_a"],
            ["Терминал B", "terminal_b"],
            ["Терминал C", "terminal_c"],
            ["Терминал D", "terminal_d"],
            ["Терминал E", "terminal_e"],
            ["Терминал F", "terminal_f"]
          ], installation.terminal),
          { include_blank: "Выберите терминал..." },
          class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.label :installation_type, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.select :installation_type, 
          options_for_select([
            ["DSM", "DSM"],
            ["DBA", "DBA"],
            ["SBDO", "SBDO"],
            ["Gates", "Gates"],
            ["Другое", "Другое"]
          ], installation.installation_type),
          { include_blank: "Выберите тип..." },
          class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.label :identifier, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :identifier, 
          class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500",
          placeholder: "Например: ZAMAR-001" %>
      <p class="mt-1 text-sm text-gray-500">Уникальный идентификатор места установки (необязательно)</p>
    </div>
  </div>

  <div class="mt-6 flex justify-end space-x-3">
    <%= link_to "Отмена", zamar_installations_path, class: "px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50" %>
    <%= f.submit installation.persisted? ? "Сохранить" : "Создать", 
        class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 cursor-pointer" %>
  </div>
<% end %>
